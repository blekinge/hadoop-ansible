[Unit]
Description=Hadoop YARN  web app proxy server
Requires=network-online.target

[Service]
User={{ yarn_user }}
Group={{ hadoop_group }}
Type=forking
ExecStart=/usr/local/bin/hadoop-invoker.sh yarn yarn-env.sh --daemon start proxyserver
PIDFile={{ hadoop_pid_dir }}/{{ yarn_user }}/hadoop-yarn-proxyserver.pid

[Install]
WantedBy=multi-user.target