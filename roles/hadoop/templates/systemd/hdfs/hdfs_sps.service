[Unit]
Description=Hadoop DFS external storagepolicysatisfier
Requires=network-online.target

[Service]
User={{ hdfs_user }}
Group={{ hadoop_group }}
Type=forking
ExecStart=/usr/local/bin/hadoop-invoker.sh hdfs hadoop-env.sh --daemon start sps
PIDFile={{ hadoop_pid_dir }}/{{ hdfs_user }}/hadoop-hdfs-sps.pid

[Install]
WantedBy=multi-user.target




