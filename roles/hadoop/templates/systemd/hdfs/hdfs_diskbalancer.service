[Unit]
Description=Distributes data evenly among disks on a given node
Requires=network-online.target

[Service]
User={{ hdfs_user.user }}
Group={{ hdfs_user.group }}
Type=forking
# Run ExecStartPre with root-permissions
# Prefix with + to Run ExecStartPre with root-permissions, see https://www.freedesktop.org/software/systemd/man/systemd.service.html#ExecStart=
ExecStartPre=+/usr/bin/mkdir -p {{ hadoop_pid_dir }}/{{ hdfs_user.user }} {{ hadoop_log_dir }}/{{ hdfs_user.user }}
ExecStartPre=+/usr/bin/chown -R {{ hdfs_user.user }}:{{ hdfs_user.group }} {{ hadoop_pid_dir }}/{{ hdfs_user.user }} {{ hadoop_log_dir }}/{{ hdfs_user.user }}
# Run ExecStart with User={{ hdfs_user.user }} / Group={{ hdfs_user.group }}
ExecStart=/usr/local/bin/hadoop-invoker.sh hdfs hadoop-env.sh --daemon start diskbalancer
PIDFile={{ hadoop_pid_dir }}/{{ hdfs_user.user }}/hadoop-hdfs-diskbalancer.pid

[Install]
WantedBy=multi-user.target




