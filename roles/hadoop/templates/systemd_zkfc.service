[Unit]
Description=Hadoop DFS zookeeper failover controller
Requires=network-online.target

[Service]
User={{ hdfs_user }}
Group={{ hadoop_group }}
Type=forking
ExecStart=/usr/local/bin/hadoop-daemon.sh hdfs --daemon start zkfc
PIDFile={{ hadoop_pid_dir }}/{{ hdfs_user }}/hadoop-hdfs-zkfc.pid

[Install]
WantedBy=multi-user.target




