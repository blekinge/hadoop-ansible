[Unit]
Description=Hadoop DFS namenode
Requires=network-online.target

[Service]
User={{ hdfs_user }}
Group={{ hadoop_group }}
Type=forking
ExecStart=/usr/local/bin/hadoop-daemon.sh hdfs --daemon start namenode
PIDFile={{ hadoop_pid_dir }}/{{ hdfs_user }}/hadoop-hdfs-namenode.pid

[Install]
WantedBy=multi-user.target




